# EventsGallery Production Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas Connection
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=eventsgallery

# Security
JWT_SECRET_KEY=your-secure-random-string-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-admin-password

# CORS (comma-separated domains)
CORS_ORIGINS=https://eventsgallery.vip,https://www.eventsgallery.vip

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx
SENDER_EMAIL=noreply@eventsgallery.vip
ADMIN_EMAIL=your-email@example.com

# Google OAuth (for Google Drive integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL
FRONTEND_URL=https://eventsgallery.vip
REACT_APP_BACKEND_URL=https://eventsgallery.vip

# Cloudflare R2 Storage
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://cdn.eventsgallery.vip
R2_BUCKET_NAME=eventsgallery-app
